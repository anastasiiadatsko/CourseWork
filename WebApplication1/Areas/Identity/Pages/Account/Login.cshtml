@page
@model LoginModel
@{
    ViewData["Title"] = "Увійти";
}

<form method="post" class="d-flex" style="height: 100vh;">
    <div class="w-50 d-flex align-items-center justify-content-center bg-light text-center p-4">
        <div>
            <h1 class="display-5">Money come and go</h1>
            <img src="https://cdn-icons-png.flaticon.com/512/2972/2972560.png" alt="money-icon" style="width: 200px;" />
        </div>
    </div>
    <div class="w-50 d-flex flex-column justify-content-center align-items-center bg-secondary text-white p-5">
        <h2>Увійти</h2>

        <div class="form-group w-75 mb-3">
            <label asp-for="Input.Email">Емейл</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group w-75 mb-3">
            <label asp-for="Input.Password">Пароль</label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group form-check w-75 mb-3">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="Input.RememberMe">Запам’ятати мене</label>
        </div>

        <button type="submit" class="btn btn-dark w-50 mt-2">Увійти</button>

        <div class="mt-3">
            Ще не зареєстровані?
            <a asp-page="./Register" class="text-white">Створити акаунт</a>
        </div>

        <div class="mt-3">
            <a asp-page="./ForgotPassword" class="text-white">Забули пароль?</a>
        </div>

    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
