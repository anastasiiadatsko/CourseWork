@model List<WebApplication1.Models.BudgetCategory>
@{
    ViewData["Title"] = "Налаштування лімітів";
}

<h2 class="mb-4">🔧 Налаштування бюджетних лімітів</h2>

<form asp-action="SetLimits" method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Категорія</th>
                <th>Поточний ліміт (грн)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].CategoryName
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].CategoryName" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].LimitAmount" class="form-control" />
                        <span asp-validation-for="@Model[i].LimitAmount" class="text-danger"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">💾 Зберегти зміни</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
