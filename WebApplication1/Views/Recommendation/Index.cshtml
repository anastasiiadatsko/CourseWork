@model List<string>
@{
    ViewData["Title"] = "Рекомендації по витратах";
}

<h2 class="mb-4">📊 Рекомендації по витратах</h2>

<div class="mb-3 text-end">
    <a class="btn btn-outline-primary" asp-action="SetLimits">
        ⚙️ Налаштувати ліміти
    </a>
</div>

@foreach (var msg in Model)
{
    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            @Html.Raw(msg)
        </div>
    </div>
}
