@model WebApplication1.Models.ProfileViewModel
@{
    ViewData["Title"] = "Акаунт";
}

<div class="container mt-5" style="background-color: #e0e0e0; padding: 2rem;">
    <div class="row">
        <!-- Ліва частина -->
        <div class="col-md-6 text-center">
            <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "https://i.imgur.com/NptGxG8.png" : Url.Content($"~/uploads/{Model.ImagePath}"))"
                 alt="Avatar"
                 class="rounded-circle"
                 style="width: 200px; height: 200px; border: 5px solid white; object-fit: cover;" />

            <h2 class="mt-3">@ViewData["Title"]</h2>

            <p class="mt-4 fs-5"><strong>Імʼя:</strong> @Model.Name</p>
            <p class="fs-5"><strong>Емейл:</strong> @Model.Email</p>
            <p class="fs-5"><strong>Дата реєстрації:</strong> @Model.RegisteredAt.ToString("dd.MM.yyyy")</p>

            <div class="mt-4 d-flex flex-column align-items-center">
                <a asp-action="Edit" class="btn btn-outline-dark mb-2 px-4">Редагувати акаунт</a>

                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <button type="submit" class="btn btn-outline-dark mb-2 px-4">Вийти</button>
                </form>

                <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Ви дійсно хочете видалити акаунт?');">
                    <button type="submit" class="btn btn-danger px-4">Видалити акаунт</button>
                </form>
            </div>
        </div>

        <!-- Права частина -->
        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
            <a asp-controller="Wallet" asp-action="Index" class="btn btn-dark mb-3 w-75 py-2">Мої гаманці</a>
            <a asp-controller="Wallet" asp-action="Create" class="btn btn-outline-dark mb-3 w-75 py-2">➕ Створити новий гаманець</a>
            <a asp-controller="Analytics" asp-action="Weekly" class="btn btn-dark mb-3 w-75 py-2">Аналітика витрат</a>
            <a asp-controller="Wishlist" asp-action="Index" class="btn btn-dark mb-3 w-75 py-2">Віш-лист</a>
            <a asp-controller="Recommendation" asp-action="Index" class="btn btn-dark mb-3 w-75 py-2">Рекомендації</a>
        </div>

    </div>
</div>
