@model WebApplication1.Models.ProfileEditViewModel
@{
    ViewData["Title"] = "Редагування акаунту";
}

<div class="container mt-5">
    <h2 class="mb-4">Редагувати акаунт</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Ім'я</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Фото профілю</label>
            <input type="file" name="ProfileImage" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
        {
            <div class="mb-3">
                <p>Поточне фото:</p>
                <img src="@Url.Content($"~/uploads/{Model.ExistingImagePath}")" width="150" class="rounded-circle border" />
            </div>
        }

        <button type="submit" class="btn btn-primary">Зберегти</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Скасувати</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
